import vk_api
from vk_api.bot_longpoll import VkBotLongPoll, VkBotEventType

print("üöÄ VK Bot –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è...")

try:
    # –ò–º–ø–æ—Ä—Ç–∏—Ä—É–µ–º –∫–æ–Ω—Ñ–∏–≥
    import config
    TOKEN = config.VK_GROUP_TOKEN
    GROUP_ID = config.VK_GROUP_ID
    
    # –ü–æ–¥–∫–ª—é—á–∞–µ–º—Å—è –∫ VK
    vk_session = vk_api.VkApi(token=TOKEN)
    longpoll = VkBotLongPoll(vk_session, GROUP_ID)
    vk = vk_session.get_api()
    
    print("‚úÖ –ë–æ—Ç –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω! –û–∂–∏–¥–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è...")
    
    # –ü—Ä–æ—Å—Ç–æ–π –æ–±—Ä–∞–±–æ—Ç—á–∏–∫
    for event in longpoll.listen():
        if event.type == VkBotEventType.MESSAGE_NEW:
            msg = event.object.message['text']
            peer_id = event.object.message['peer_id']
            
            if msg.lower() == '/help':
                vk.messages.send(
                    peer_id=peer_id,
                    message='ü§ñ –ë–æ—Ç —Ä–∞–±–æ—Ç–∞–µ—Ç! /help /–∂–∏–≤',
                    random_id=0
                )
            elif msg.lower() == '/–∂–∏–≤':
                vk.messages.send(
                    peer_id=peer_id,
                    message='‚úÖ –Ø –∂–∏–≤!',
                    random_id=0
                )
                
except Exception as e:
    print(f"‚ùå –û—à–∏–±–∫–∞: {e}")
